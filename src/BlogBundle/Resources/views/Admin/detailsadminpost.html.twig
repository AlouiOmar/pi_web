{% extends '@Blog/Admin/dashbord.html.twig' %}













{% block content %}
<body class="bg-white">



<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">





    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->


        <!-- Main content -->
        <section class="content">
            <div class="row">


               <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                                                    
                        </div>

<!-- breadcrumb start-->
{% for message in app.flashes('info') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
<!--================Blog Area =================-->
<section class="blog_area single-post-area section_padding">
    <div class="container">
        <div class="row">

        
            <div class="col-lg-8 posts-list">
                <div class="single-post">
                    <div class="feature-img">
                        <img class="img-fluid" style="width: 100%; height: 300px;"  src="{{ asset('uplods/post/' ~ photo) }}" alt="">
                    </div>

                    

                            <div class="box">
                                        <div class="box-header">
                                        <h3 class="box-title">Détails de post</h3>
                                        </div>
                                        <!-- /.box-header -->
                                        <div class="box-body no-padding">
                                                <table class="table table-condensed">
                                                    <tbody>
                                                    <tr>
                                                    <th style="width: 10px">#</th>
                                                    <th>Description</th>
                                                    <th style="width: 70px">titre</th>
                                                    <th style="width: 80px">Rating </th>
                                                    <th style="width: 90px">utilisateur </th>
                                                        <th style="width: 100px">date  </th>
                                                    </tr>
                                                    <tr>
                                                    <td>1.</td>
                                                    <td>{{ description|raw }}</td>
                                                    <td>
                                                        
                                                        {{ title }}
                                                        
                                                    </td>
                                                    <td><span class="badge bg-green">  {{ rating}}</span></td>

                                                    <td> {{ creator}}</td>
                                                        <td>{{date|date() }}</td>
                                                    </tr>
                                                
                                                
                                                </tbody></table>
                                      </div>
                                        <!-- /.box-body -->
                             </div>


                                            </div>

                                        



             </div>
             <div class="col-lg-8 posts-list">
           <div class="box">
            <div class="box-header">
              <h3 class="box-title">les commentaires de ce post </h3>
            </div>
            <!-- /.box-header -->
               <div class="box">
                                       
                                        <!-- /.box-header -->
                                        <div class="box-body no-padding">
                                                <table class="table table-condensed">
                                                    <tbody>
                                                    <tr>
                                                    <th style="width: 10px">#</th>
                                                    <th >contenu</th>
                                                    <th >utilisateur</th>
                                                    <th >date </th>
                                                    </tr>
                                                      {% for comment in posts.comments %} 
                                                    <tr>
                                                    <td>{{ comment.getId() }}</td>
                                                    <td>{{ comment.getContent() }}</td>
                                                    <td>
                                                        
                                                     {{ comment.user  }}
                                                    </td>
                                                    <td><span class="badge bg-green"> {{ comment.getPostedAt()|date('Y-m-d') }}</span></td>

                                                  
                                                    </tr>
                                                       {% endfor %}
                                                
                                                
                                                </tbody></table>
                                      </div>
                                        <!-- /.box-body -->
                             </div>
            <!-- /.box-body -->
          </div>
             </div>

            <div class="comment-form" >
                   

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <form  action="{{ path('addcommentadmin') }}" class="form-contact comment_form"   method="POST" id="commentForm">
                        <input type="hidden" name="post_id" value= "{{ id }}">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                              <textarea class="form-control w-100" name="comment" id="comment" cols="15" rows="9"
                                        placeholder="Write Comment"></textarea>
                                </div>
                            </div>



                        </div>
                        <div class="form-group mt-3">
                            <input 
                            
                            type="submit" class="btn btn-block btn-info btn-flat" value="ajouter un commentaire">
                        </div>
                    </form>

                {% elseif is_granted('IS_AUTHENTICATED_ANONYMOUSLY') %}
                    <br> <br>


                    <div class  = "alert alert-primary" role = "alert">
                        vous devez créer un compte avant d'ajouter un commentaire
                        <a href = "{{ path('fos_user_registration_register')}}">céer un compte</a>
                        ou bien vous  devez
                        <a href = "{{ path('fos_user_security_login')}}" >s'authentifier</a>
                    </div>

                {% endif %}


                </div>
            </div>
            <div class="col-lg-4">
                <div class="blog_right_sidebar">
                    <aside class="single_sidebar_widget search_widget">
                        <form action="#">
                            <div class="form-group">
                                <div class="input-group mb-3">





                                </div>
                            </div>
                           
                        
                           
                        </form>
                    </aside>
  
                                        

                </div>
            </div>
        </div>
    </div>
</section>
<!--================Blog Area end =================-->
</body>

{% endblock %}