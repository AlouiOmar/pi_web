{% extends 'baseAdmin.html.twig' %}
{% block title %} Détails de l'annonce{% endblock title %}
{% block headerTitle %}Détails de l'annonce{% endblock headerTitle %}
{% block body %}
    <!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-md-12">

                <!-- Profile Image -->
                <div class="box box-primary">
                    <div class="box-body box-profile">{% if annonce!=null %}
                            <img class="profile-user-img img-responsive" style="width: 50%;height: 500px" src="{{ asset(annonce.photo) }}" alt="Annonce profile picture" style="width: 150px;height: 150px;">

                            <h3 class="profile-username text-center">{{ annonce.titre }}</h3>

                            <p class="text-muted text-center">{{ annonce.prix }}  DT</p>

                            {#< class="list-group list-group-unbordered">#}
                                <li class="list-group-item">
                                    <b>Titre:</b> <a class="pull-right">{{ annonce.titre }}</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Catégorie:</b> <a class="pull-right">{{ annonce.categorie}}</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Gouvernorat:</b> <a class="pull-right">{{ annonce.gouvernorat }}</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Publiée le:</b> <a class="pull-right">{{ annonce.datep|date('d-m-Y')}}</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Date:</b> <a class="pull-right">{{ annonce.date|date('d-m-Y')}}</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Description:</b> <a class="pull-right">{{ annonce.description }}</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Prix:</b> <a class="pull-right">{{ annonce.prix }}</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Active:</b> <a class="pull-right">{% if annonce.active==1 %}Oui{% else %}Non{% endif %}</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Type:</b> <a class="pull-right">{{ annonce.type }}</a>
                                </li>
                           {% if annonce.categorie=='Vélo' %}
                               <li class="list-group-item">
                                    <b>Type de vélo:</b> <a class="pull-right">{{ annonce.typevelo }}</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Couleur:</b> <a class="pull-right">{{ annonce.couleur }}</a>
                                </li>

                           {% endif %}
                            {% if causes!=null %}

                                <li class="list-group-item">
                                    <b>Cause du signalement:</b> <a class="pull-right"> </a>
                                </li>
                                {% for cause in causes %}
                                <li class="list-group-item">
                                    <b>{{ cause.cause }}</b> <a class="pull-right">{{ cause.nombre }}</a>
                                </li>
                               {% endfor %}
                            {% endif %}
                            </ul>
                            {#{{ dump(causes) }}#}
                            {#{{ dump(causes[0].cause) }}#}
                            <div class="col-md-12"style="margin-left: 4%;margin-top: 1%;">
                            <a href="{{ path('velo_admin_edit_annonce',{"id":annonce.ida}) }}" class="col-md-6 btn btn-primary " style="width: 45%;"><b>Modifier</b></a>
                            <a  class="col-md-6 btn btn-danger " id="del" onclick="dela({{ annonce.ida }})" style="width: 45%;margin-left: 1%;"><b>Supprimer</b></a>
                            </div>{% endif %}
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->

                {#{{ path("velo_admin_delete_user",{"id":user.id}) }}#}
            </div>
        </div>
        <!-- /.row -->
        <style>
            .swal-height {
                height: 300px;
                font-size: 15px;
            }
        </style>
    </section>
    <!-- /.content -->
{% endblock body %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script src="{{ asset('js/annoncedelete.js') }}"></script>



{% endblock %}