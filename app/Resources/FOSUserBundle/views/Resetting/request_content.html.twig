{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
   <div class="p-5 container"><div>
        <label class="form-control" style="border-color: white;margin-left: -10px" for="username">{{ 'resetting.request.username'|trans }}</label>
        <input class="form-control" style="margin-bottom: 10px" type="text" id="username" name="username" required="required" />
    </div>
    <div>
        <input class="p-2 btn btn-primary" type="submit" value="{{ 'resetting.request.submit'|trans }}" />
    </div>
   </div>
</form>
